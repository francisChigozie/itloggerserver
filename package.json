  "dependencies": {
    "bcrypt": "^5.0.1",
    "colors": "^1.4.0",
    "config": "^3.3.7",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "express-handlebars": "^6.0.1",
    "express-mongo-sanitize": "^2.1.0",
