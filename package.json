{
  "name": "generalsever",
  "version": "1.0.0",
  "description": "Multple purpose sever",
  "main": "gserver.js",
  "scripts": {
    "start": "node gserver.js",
    "server": "nodemon gserver.js",
    "client": "npm start --prefix client",
    "clientinstall": "npm install --prefix client",
    "dev": "concurrently \"npm run gserver\" \"npm run client\"",
